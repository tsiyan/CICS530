    android:orientation="vertical" >

    <!-- non-scrolling top pane -->

    <LinearLayout
        android:id="@+id/panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/recommendations_style"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_activity"
            android:gravity="center" />

        <TextView
            android:id="@+id/sleep"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_sleep"
            android:gravity="center" />

        <TextView
            android:id="@+id/heart_rate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_heart_rate"
            android:gravity="center" />

        <TextView
            android:id="@+id/blood_pressure"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_blood_pressure"
            android:gravity="center" />
    </LinearLayout>

