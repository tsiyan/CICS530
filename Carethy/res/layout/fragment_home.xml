<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- non-scrolling top pane -->

    <LinearLayout
        android:id="@+id/panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity"
            style="@style/homePanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_panel_bg_style"
            android:drawableTop="@drawable/ic_activity" />

        <TextView
            android:id="@+id/sleep"
            style="@style/homePanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_panel_bg_style"
            android:drawableTop="@drawable/ic_sleep" />

        <TextView
            android:id="@+id/heart_rate"
            style="@style/homePanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_panel_bg_style"
            android:drawableTop="@drawable/ic_heart_rate" />

        <TextView
            android:id="@+id/blood_pressure"
            style="@style/homePanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_panel_bg_style"
            android:drawableTop="@drawable/ic_blood_pressure" />
    </LinearLayout>

    <!-- scrolling ListView bottom pane -->

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/scrollPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/scrollInnerPanel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>
