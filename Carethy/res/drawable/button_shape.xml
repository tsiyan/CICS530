<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <stroke android:width="1dip" android:color="#505050" />

            <gradient android:angle="-90" android:endColor="#003366" android:startColor="#2c636b" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <stroke android:width="1dip" android:color="#505050" />

            <solid android:color="#003366" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <stroke android:width="1dip" android:color="#505050" />

            <gradient android:angle="-90" android:endColor="#003366" android:startColor="#5E869F" />
        </shape></item>

</selector>